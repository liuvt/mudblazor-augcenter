        <Column T="Product" Field="ProductId" Title="ID"/>
        <Column T="Product" Field="ProductSku" Title="Ma SP"/>
        <Column T="Product" Field="ProductName" Title="Ten SP"/>
        <Column T="Product" Field="ProductPrice" Title="Don Gia"/>
